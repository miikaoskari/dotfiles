;----------------colors----------------

[colors]
background = #1c2023
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

;-----------------bars-----------------

[bar/stat]
;monitor = ${env:MONITOR:HDMI-1}
